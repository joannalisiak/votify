<h1>#Municipality InfoChat</h1>
<p>Most important information will be published here:</p>
    <% if current_user.role == "municipality" %>
     <%= simple_form_for [chatroom, message ], remote: true do |f| %>
        <%= f.label :content, "Publish here:"%>
        <%= f.input :content, as: :string, label: false, placeholder: "Message" %>
        <% end %>
    <% end %>
        <div id="messages" data-chatroom-id="<%= chatroom.id %>">
            <% chatroom.messages.reverse.each do |message| %>
            <%= render(partial: "messages/message", locals: { message: message }) %>
            <% end %>
        </div>
