<div class="container pt-5">
  <h2 class="text-center pb-3">Log in</h2>
  <div class="row justify-content-center">
    <div class=" card card-signup p-5 col-8">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "w-100 btn btn-warning py-2 my-2" %>
        </div>
      <% end %>

      <div class="d-flex justify-content-end pt-1">
      <p class="text-right">Not having an account yet? <%= render "devise/shared/links" %></p>
    </div>
    </div>
  </div>
</div>
