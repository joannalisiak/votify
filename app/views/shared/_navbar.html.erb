<div class="navbar navbar-expand-md navbar-custom navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <h2 class="logo">Votify</h2>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon custom-toggler">
      <i class="fas fa-bars" style="color:#fff; font-size:23px;"></i>
    </span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "create idea", new_idea_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "view ideas", ideas_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <div class="avatar dropdown-toggle" id="navbarDropdown", data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <p class="letter"><%= current_user.first_name.first.capitalize %></p>
        </div>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "dashboard", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "how it works", root_path(anchor: 'how-it-works'), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "testimonials", root_path(anchor: 'testimonials'), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "view ideas", ideas_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "log in", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
